<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Main2Activity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/resume"
            android:layout_width="185dp"
            android:layout_height="228dp"
            android:contentDescription="封面" />

        <TextView
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/resume"
            android:text="书名:"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@id/resume"
            android:text="ISBN:"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/resume"
            android:text="作者:"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/resume"
            android:text="出版社:"
            android:textSize="18sp"></TextView>

        <TextView
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="155dp"
            android:layout_toRightOf="@id/resume"
            android:text="价格:"
            android:textSize="18sp"></TextView>

        <TextView
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@id/resume"
            android:text="状态:"
            android:textSize="15sp">
        </TextView>

        <TextView
            android:id="@+id/single_name"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/resume"
            android:text="李林880:"
            android:textColor="#FF5722"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/single_isbn"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@id/resume"
            android:text="32880:"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/single_author"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/resume"
            android:text="张宇:"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/single_press"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="123dp"
            android:layout_toRightOf="@id/resume"
            android:text="李林880:"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/single_cost"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="159dp"
            android:layout_toRightOf="@id/resume"
            android:text="35.00"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/single_status"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@id/resume"
            android:text="在馆:"
            android:textColor="#03A9F4"
            android:textSize="16sp">
        </TextView>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="书籍简介"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/book_info"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm_borrow"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="145dp"
            android:layout_weight="1"
            android:background="#fff"
            android:text="借阅该书"
            android:textColor="#03A9F4"
            android:textSize="20sp">

        </Button>

        <Button
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="145dp"
            android:layout_weight="1"
            android:background="#fff"
            android:text="收藏"
            android:textSize="20sp"
            android:textColor="#E91E63">

        </Button>
    </LinearLayout>







</LinearLayout>

