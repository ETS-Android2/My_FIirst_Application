<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_background"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:background="@drawable/user_background">

        <ImageView
            android:id="@+id/user_picture"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp">

        </ImageView>

        <TextView
            android:id="@+id/login_name"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/user_picture"
            android:layout_marginLeft="-117dp"
            android:layout_marginBottom="-43dp"
            android:layout_toRightOf="@id/user_picture"
            android:text="用户名"
            android:textColor="#fff"
            android:textSize="20sp" />

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
     android:orientation="horizontal">

     <ImageView
         android:layout_width="44dp"
         android:layout_height="43dp"
         android:layout_marginTop="10dp"
         android:background="@drawable/safety"
         android:backgroundTint="#b8b9bd">

     </ImageView>

     <TextView
         android:layout_marginTop="5dp"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:paddingLeft="10dp"
         android:paddingTop="10dp"
         android:text="帐号与安全"
         android:textSize="25dp" />
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/privacy"
            android:backgroundTint="#b8b9bd">

        </ImageView>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="隐私设置"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:background="@drawable/comment2">

        </ImageView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:text="反馈与帮助"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="44dp"
            android:background="@drawable/settings"
            android:backgroundTint="#b8b9bd"
            android:layout_height="43dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="设置"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="44dp"
            android:background="@drawable/about_us"
            android:layout_height="43dp"
            android:backgroundTint="#b8b9bd">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:text="关于我们"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="44dp"
            android:background="@drawable/update"
            android:layout_height="43dp"
            android:backgroundTint="#b8b9bd">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="检查更新"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:background="@drawable/login_out"
            android:backgroundTint="#b8b9bd">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="退出登录"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:layout_marginTop="100dp"
        >

    </TextView>

</LinearLayout>
